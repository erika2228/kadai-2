<h1>Editing Book</h1>
<% if @book.errors.any? %>
 <ul>
     <li><%= "error!" %></li>
 </ul>
<% end %>

<%= form_with model:@book, local: true do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>本文</h4>
  <%= f.text_area :body %>
 
  <%= f.submit 'Update Book' %>
<% end %>

<%= link_to "Show", book_path(@book.id) %>
<%= link_to "Back", '/books' %>